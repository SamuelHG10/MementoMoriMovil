<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu2">

    <ImageView
        android:id="@+id/img_fondo"
        android:layout_width="800dp"
        android:layout_height="900dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/fondomenu" />

    <ImageView
        android:id="@+id/img_LogoMementoMori"
        android:layout_width="351dp"
        android:layout_height="110dp"
        android:layout_marginStart="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/mementomori" />

    <ImageView
        android:id="@+id/img_fondoAbajo"
        android:layout_width="413dp"
        android:layout_height="208dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/undepic" />

    <Button
        android:id="@+id/btn_SaverMAs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/paTextView"
        android:text="Saber mas"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Informacion2" />


    <TextView
        android:id="@+id/txt_Informacion"
        android:layout_width="299dp"
        android:layout_height="95dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="48dp"
        android:text="&quot;Memento Mori&quot;, es un videjuego en 2D, creado en el motor grafico llamado Unity."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_LogoMementoMori" />

    <TextView
        android:id="@+id/txt_Informacion2"
        android:layout_width="293dp"
        android:layout_height="124dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:text="La historia nos cuenta la tragica vida de un caballero el cual tiene que enfrentarse a varios mounstros, despues de haber perdido su reino."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Informacion" />

</androidx.constraintlayout.widget.ConstraintLayout>